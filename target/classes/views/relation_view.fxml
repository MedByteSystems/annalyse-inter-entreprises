<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.entreprise.controllers.RelationController"
            style="-fx-background-color: #f5f5f5;">

    <!-- En-tÃªte -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox spacing="20">
                <Button text="â—€ Dashboard"
                        onAction="#goToHome"
