            </HBox>
        </VBox>
    </top>

    <!-- Centre : Tableau des relations -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox spacing="10">
                <Label text="Liste des relations inter-entreprises"
                       style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="lblCount" text="(0 relations)"/>
            </HBox>

            <TableView fx:id="tableView"
                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
                    <TableColumn text="Entreprise Source" fx:id="colSource" prefWidth="200"/>
                    <TableColumn text="Entreprise Cible" fx:id="colCible" prefWidth="200"/>
                    <TableColumn text="Type" fx:id="colType" prefWidth="120"/>
                    <TableColumn text="Date DÃ©but" fx:id="colDateDebut" prefWidth="100"/>
                    <TableColumn text="Date Fin" fx:id="colDateFin" prefWidth="100"/>
                    <TableColumn text="Description" fx:id="colDescription" prefWidth="250"/>
                    <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bas : Boutons d'action et statistiques -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <!-- Statistiques rapides -->
            <HBox spacing="30">
                <VBox>
                    <Label fx:id="lblTotalRelations" text="0"
                           style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #2980b9;"/>
                    <Label text="Total Relations"/>
                </VBox>
                <VBox>
                    <Label fx:id="lblPartenariats" text="0"
                           style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #27ae60;"/>
                    <Label text="Partenariats"/>
                </VBox>
                <VBox>
                    <Label fx:id="lblCollaborations" text="0"
                           style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #f39c12;"/>
                    <Label text="Collaborations"/>
                </VBox>
                <VBox>
                    <Label fx:id="lblAcquisitions" text="0"
                           style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #e74c3c;"/>
                    <Label text="Acquisitions"/>
                </VBox>
            </HBox>

            <!-- Boutons d'action - SUPPRIMÃ‰ VISUALISER LE RÃ‰SEAU ET ANALYSE DÃ‰TAILLÃ‰E -->
            <HBox spacing="20">
