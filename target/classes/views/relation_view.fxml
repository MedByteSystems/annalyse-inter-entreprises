                <Label text="ðŸ”— Gestion des Relations"
                       textFill="white"
                       style="-fx-font-weight: bold;">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Filtres -->
            <HBox spacing="10">
                <ComboBox fx:id="cbTypeRelation"
                          promptText="Tous les types"
                          style="-fx-pref-width: 200;"
                          onAction="#onFilterType"/>

                <ComboBox fx:id="cbEntrepriseSource"
                          promptText="Entreprise source"
                          style="-fx-pref-width: 250;"
                          onAction="#onFilterEntreprise"/>

                <ComboBox fx:id="cbEntrepriseCible"
                          promptText="Entreprise cible"
                          style="-fx-pref-width: 250;"
                          onAction="#onFilterEntreprise"/>

                <Button text="ðŸ”„ RÃ©initialiser"
