<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.entreprise.controllers.EntrepriseController"
            style="-fx-background-color: #f5f5f5;">

    <!-- En-tÃªte -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button text="â—€ Accueil"
                        onAction="#goToHome"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 3;"/>
                <Label text="ðŸ¢ Gestion des Entreprises"
                       textFill="white"
                       style="-fx-font-weight: bold;">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Barre de recherche et filtres -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearch"
                           promptText="Rechercher une entreprise..."
                           style="-fx-pref-width: 300;"
                           onKeyReleased="#onSearch"/>

                <ComboBox fx:id="cbSecteur"
                          promptText="Tous les secteurs"
                          style="-fx-pref-width: 200;"
                          onAction="#onFilterSecteur"/>

                <Button text="ðŸ” Rechercher"
                        onAction="#onSearchAction"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

                <Button text="ðŸ”„ RÃ©initialiser"
                        onAction="#resetFilters"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Centre : Tableau des entreprises -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Liste des entreprises"
                       style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <Label fx:id="lblCount" text="(0 entreprises)"/>
            </HBox>

            <TableView fx:id="tableView"
                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;">
                <columns>
                    <TableColumn text="ID" fx:id="colId" prefWidth="50"/>
                    <TableColumn text="Nom" fx:id="colNom" prefWidth="200"/>
                    <TableColumn text="Secteur" fx:id="colSecteur" prefWidth="150"/>
                    <TableColumn text="Ville" fx:id="colVille" prefWidth="120"/>
                    <TableColumn text="Pays" fx:id="colPays" prefWidth="100"/>
                    <TableColumn text="Date CrÃ©ation" fx:id="colDateCreation" prefWidth="120"/>
                    <TableColumn text="Chiffre d'Affaires" fx:id="colChiffreAffaires" prefWidth="150"/>
                    <TableColumn text="Actions" fx:id="colActions" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Bas : Boutons d'action -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button text="âž• Ajouter une entreprise"
                    onAction="#showAddDialog"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20;"/>

            <Button text="ðŸ“‹ Exporter vers CSV"
                    onAction="#exportToCSV"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-padding: 10 20;"/>


        </HBox>
    </bottom>
</BorderPane>